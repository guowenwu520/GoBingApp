<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
             android:background="@drawable/bggo"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
   <ImageView
       android:layout_marginBottom="100dp"
       android:scaleType="fitXY"
       android:src="@drawable/go_bing"
       android:layout_width="200dp"
       android:layout_height="130dp" />
    <com.example.materialdesign.views.ButtonRectangle
        android:id="@+id/tv_coupe_mode"
        android:text="人机模式"
        android:background="#e69d21"
        android:layout_width="300dp"
        android:layout_height="90dp"/>
    <com.example.materialdesign.views.ButtonRectangle
        android:id="@+id/tv_wifi_mode"
        android:layout_marginTop="30dp"
        android:text="WIFI对战"
        android:background="#ef9414"
        android:layout_width="300dp"
        android:layout_height="90dp"/>

</LinearLayout>